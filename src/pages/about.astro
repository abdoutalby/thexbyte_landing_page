---
import Layout from '../layouts/Layout.astro';

const title = "About TheXbyte - Digital Solutions Company in Tunisia";
const description = "Learn about TheXbyte, a leading digital solutions company in Tunisia specializing in custom software development, mobile apps, and automation systems.";
---

<Layout {title} {description}>
  <main id="main-content">
    <section class="hero">
      <h1>About TheXbyte</h1>
      <p>Leading digital innovation in Tunisia since 2015</p>
    </section>
    
    <section class="mission">
      <h2>Our Story</h2>
      <p>TheXbyte was founded with a vision to transform businesses through cutting-edge digital solutions...</p>
    </section>
  </main>
</Layout>