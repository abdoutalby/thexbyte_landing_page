<!-- Consultation Modal -->
<div class="modal" id="consultationModal">
  <div class="modal-content">
    <button class="modal-close" id="modalClose">&times;</button>
    <h2>Schedule a Consultation</h2>
    <p>Let's discuss your project and how we can help transform your business with innovative digital solutions.</p>
    
    <form id="consultationForm">
      <div class="form-group">
        <label for="consultName">Full Name *</label>
        <input type="text" id="consultName" name="name" required placeholder="Your full name">
      </div>
      
      <div class="form-group">
        <label for="consultEmail">Email Address *</label>
        <input type="email" id="consultEmail" name="email" required placeholder="your@email.com">
      </div>
      
      <div class="form-group">
        <label for="consultCompany">Company Name</label>
        <input type="text" id="consultCompany" name="company" placeholder="Your company">
      </div>
      
      <div class="form-group">
        <label for="consultPhone">Phone Number</label>
        <input type="tel" id="consultPhone" name="phone" placeholder="+1 (555) 123-4567">
      </div>

      <div class="form-group">
        <label>Services Interested In *</label>
        <div class="service-options" id="serviceOptions">
          <div class="service-option" data-value="custom-software">Custom Software</div>
          <div class="service-option" data-value="mobile-app">Mobile Apps</div>
          <div class="service-option" data-value="automation">Automation</div>
          <div class="service-option" data-value="integration">Integration</div>
          <div class="service-option" data-value="transformation">Digital Transformation</div>
          <div class="service-option" data-value="support">Support</div>
        </div>
        <input type="hidden" id="consultServices" name="services" required>
      </div>

      <div class="form-group">
        <label for="consultDate">Preferred Date *</label>
        <input type="date" id="consultDate" name="date" required min="">
      </div>
      
      <div class="form-group">
        <label for="consultTime">Preferred Time *</label>
        <select id="consultTime" name="time" required>
          <option value="">Select time</option>
          <option value="9:00 AM">9:00 AM</option>
          <option value="10:00 AM">10:00 AM</option>
          <option value="11:00 AM">11:00 AM</option>
          <option value="1:00 PM">1:00 PM</option>
          <option value="2:00 PM">2:00 PM</option>
          <option value="3:00 PM">3:00 PM</option>
          <option value="4:00 PM">4:00 PM</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="consultMessage">Project Details *</label>
        <textarea id="consultMessage" name="message" required placeholder="Tell us about your project, goals, and timeline..." rows="4"></textarea>
      </div>

      <button type="submit" class="submit-button" id="consultSubmitBtn">
        Schedule Consultation
      </button>
      
      <div class="spinner" id="consultSpinner"></div>
      <div class="form-status" id="consultStatus"></div>
    </form>
  </div>
</div>

<!-- Quick Quote Modal -->
<div class="modal" id="quoteModal">
  <div class="modal-content">
    <button class="modal-close" id="quoteModalClose">&times;</button>
    <h2>Get a Quick Quote</h2>
    <p>Tell us about your project requirements and we'll provide an estimate.</p>
    
    <form id="quoteForm">
      <div class="form-group">
        <label for="quoteName">Full Name *</label>
        <input type="text" id="quoteName" name="name" required placeholder="Your full name">
      </div>
      
      <div class="form-group">
        <label for="quoteEmail">Email Address *</label>
        <input type="email" id="quoteEmail" name="email" required placeholder="your@email.com">
      </div>

      <div class="form-group">
        <label for="quoteService">Service Needed *</label>
        <select id="quoteService" name="service" required>
          <option value="">Select a service</option>
          <option value="custom-software">Custom Software Development</option>
          <option value="mobile-app">Mobile Applications</option>
          <option value="automation">Automation Systems</option>
          <option value="integration">System Integration</option>
          <option value="transformation">Digital Transformation</option>
          <option value="support">Ongoing Support</option>
        </select>
      </div>

      <div class="form-group">
        <label for="quoteBudget">Estimated Budget *</label>
        <select id="quoteBudget" name="budget" required>
          <option value="">Select budget range</option>
          <option value="under-10k">Under $10,000</option>
          <option value="10k-50k">$10,000 - $50,000</option>
          <option value="50k-100k">$50,000 - $100,000</option>
          <option value="over-100k">Over $100,000</option>
        </select>
      </div>

      <div class="form-group">
        <label for="quoteTimeline">Project Timeline</label>
        <select id="quoteTimeline" name="timeline">
          <option value="">Select timeline</option>
          <option value="urgent">Urgent (1-2 weeks)</option>
          <option value="short">Short (1 month)</option>
          <option value="medium">Medium (1-3 months)</option>
          <option value="long">Long (3+ months)</option>
        </select>
      </div>

      <div class="form-group">
        <label for="quoteDescription">Project Description *</label>
        <textarea id="quoteDescription" name="description" required placeholder="Describe your project requirements..." rows="4"></textarea>
      </div>

      <button type="submit" class="submit-button" id="quoteSubmitBtn">
        Get Quote
      </button>
      
      <div class="spinner" id="quoteSpinner"></div>
      <div class="form-status" id="quoteStatus"></div>
    </form>
  </div>
</div>